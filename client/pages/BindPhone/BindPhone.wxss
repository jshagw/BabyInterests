@import "../../utils/weui.wxss";

page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.phone, .verification {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.bind-text {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    height: 100rpx;
    width: 100%;
    background: #FFF;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.verify_button {
    width: 35%;
    height: 100rpx;
    margin-right: 20rpx;
}

.verify-input {
  width: 65%;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}


.img-box {
  padding: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  text-align: center;
}
 
.img-box image {
  width: 500rpx;
  height: 500rpx;
  background-color: #f9f9f9;
}

.qrcanvas {
  width: 500rpx;
  height: 500rpx;
  background:#f1f1f1;
  display: inline-block
}

.mask {
  position: fixed;
  top: 0;left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.canvas-box {
  position: fixed;
  top:999999rpx;
  left: 0
}
