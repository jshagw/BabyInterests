@import "../../utils/weui.wxss";

page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.phone, .verification {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.bind-text {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    height: 100rpx;
    width: 100%;
    background: #FFF;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.verify_button {
    width: 35%;
    height: 100rpx;
    margin-right: 20rpx;
}

.verify-input {
  width: 65%;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}
