<!--AddBaby.wxml-->
<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">姓名</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" auto-focus placeholder="输入宝宝姓名"/>
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">性别</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <radio-group bindchange='selectSex'>
          <radio value='1' checked='{{sex==="1"}}'>男</radio>
          <radio value='2' checked='{{sex==="2"}}'>女</radio>
        </radio-group>
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">生日</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <picker mode="date" value="{{birthday}}" start="2000-01-01" bindchange="selectBirthday">
          <view class="picker">
            宝宝生日: {{birthday}}
          </view>
        </picker>
      </view>
    </view>
  </view>
</view>

